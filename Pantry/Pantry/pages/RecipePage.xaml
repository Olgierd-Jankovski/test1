<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Pantry.pages.RecipePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar
                x:Name="SearchFilter"
                Placeholder="Search for specific recipe"
                Text=""
                TextChanged="SearchBar_TextChanged" />
            <ListView
                x:Name="recipeListView"
                ItemTapped="OpenRecipeInfo"
                SelectedItem="{Binding selectedRecipe}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell
                            Detail="{Binding Type}"
                            ImageSource="{Binding ImageSource}"
                            Text="{Binding Title}"
                            TextColor="Black" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>