<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="Pantry.pages.EditProduct"
           xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
           xmlns:models="clr-namespace:Pantry.models"
           Size="300,400"
           Color="Transparent">

    <Frame VerticalOptions="CenterAndExpand" CornerRadius="20">
        <StackLayout>
            <Label Text="Edit Product"/>
            <StackLayout VerticalOptions="CenterAndExpand">
                <Entry HorizontalTextAlignment="Center" Text="{Binding Name}"/>
                <DatePicker Date="{Binding Date}" HorizontalOptions="Center"/>
                <Button Text="Confirm" CornerRadius="20" BackgroundColor="Green" Clicked="OnConfirm"/>
                <Button Text="Cancel" CornerRadius="20" BackgroundColor="IndianRed" Clicked="OnCanceled"/>
            </StackLayout>
            <Button Text="Delete" CornerRadius="20" BackgroundColor="Red" Clicked="OnDelete" VerticalOptions="End"/>
        </StackLayout>
    </Frame>

</xct:Popup>